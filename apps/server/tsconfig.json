{
  "extends": "@sudhanbus/config/tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.json"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "strictNullChecks": true,
    "resolveJsonModule": true
  }
}
